  <li>chop off <%= link_to 'first 1', :action => :chop1, :id => @text %>, <%= link_to 'first 2', :action => :chop2, :id => @text %>, or <%= link_to 'first 3', :action => :chop3, :id => @text %> lines</li>
  <li><%= link_to 'Undo any splits', :action => :unsplit, :id => @text %></li>
</ul>
