<script type="text/javascript">
var font_size = 12
jQuery(document).ready(function() {
  jQuery(".markdown").hide();
  jQuery(".heading").click(function()
  {
    jQuery(this).next(".markdown").slideToggle(500);
  });
  var originalFontSize = $('p').css('font-size');
    $("#bResetSize").click(function(){
    $('p').css('font-size', originalFontSize);
  });
  // Increase Font Size
  $("#bLarger").click(function(){
    var currentFontSize = $('p').css('font-size');
    var currentFontSizeNum = parseFloat(currentFontSize, 10);
    var newFontSize = currentFontSizeNum*1.2;
    $('p').css('font-size', newFontSize);
    return false;
  });
  // Decrease Font Size
  $("#bSmaller").click(function(){
    var currentFontSize = $('p').css('font-size');
    var currentFontSizeNum = parseFloat(currentFontSize, 10);
    var newFontSize = currentFontSizeNum*0.8;
    $('p').css('font-size', newFontSize);
    return false;
  });
$("#bDavid").click(function() { $("p").css("font-family","David CLM, David, Serif") });
$('#bTimes').click(function() { $("p").css("font-family", "Times New Roman") } );
});

</script>
<h2>Rendering MultiMarkDown as HTML for File: <%= @text.path.sub('/mnt/by/','') %></h2>
<button id="bDavid">David</button> <button id="bTimes">Times</button> <button id="bLarger">Larger text</button> <button id="bSmaller">Smaller text</button> <button id="bResetSize">Reset size</button>
<%= raw(@html) %>
<p class="heading">Here's the raw MultiMarkDown.  Make any corrections needed, and add the __SPLIT__ magic word to split the markdown into separate works. Also, here's <a href="<%= AppConstants.base_uri + @text.url %>">the original HTML file, for comparison</a></p>
<div class="markdown">
<p><%= form_tag(:action => "render_html", :id => @text) do %>
     <%= text_area_tag(:markdown, raw(@markdown), :size => "80x40" ) %>
     <%= submit_tag("Update!") %>
   <% end %></p>
     </div>
<p>You can:</p>
