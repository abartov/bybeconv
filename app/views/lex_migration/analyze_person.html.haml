.top-element
  %div{style:'margin-top:15px; margin-right:15px'}
    %h1= t(:lexicon_migration) + ": " + t(:lexicon_analyze_person) + ": " + @title
    %h2= t(:lexicon_bio)
    %p= @lex_person['about']
    %h2= t(:books)
    %ul.lex
      - @lex_person['books'].each do |book|
        %li= book
    %h2= t(:bibliography)
    %ul.lex
      - @lex_person['bib'].each do |bib|
        %li!= MultiMarkdown.new(bib).to_html.force_encoding('UTF-8')
    %h2= t(:links)
    %ul.lex
      - @lex_person['links'].each do |link|
        - next if link.nil?
        %li= link_to link.description, link.url
