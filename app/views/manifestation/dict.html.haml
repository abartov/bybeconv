              %a{:disabled => "disabled", :href => "#"} י
              %a{:disabled => "disabled", :href => "#"} כ
              %a{:href => "#"} ל
              %a{:href => "#"} מ
              %a{:href => "#"} נ
              %a{:href => "#"} ס
              %a{:href => "#"} ע
