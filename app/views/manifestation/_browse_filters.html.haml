            - attrs = @period_facet[p[0]].nil? ? {disabled: 'disabled'} : {}
            - attrs.merge!({:name => "ckb_periods", :type => "checkbox", value: p[1]})
            %input#CheckboxGroup2{ attrs}/
            %label
              = t(p[1])
              %span= "(#{@period_facet[p[0]] || '0'})"
