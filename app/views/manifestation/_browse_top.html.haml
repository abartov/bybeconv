              %a{:href => "#"}
                %span.by-icon-v02 3
        .author-page-top-icons-mobile
          .top-left-icons-group
            .icon-in-group-v02
              %a{:href => "#"}
                %span.by-icon-v02.icon-bybookshelf
                .anthology-badge
                  .badge-number 2
            #moreMobile-author.by-dropdown-v02
              %span#nav-more-icon
                %a{:href => "#"}
                  %span.by-icon-top-v02 Y
