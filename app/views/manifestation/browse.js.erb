$('#thelist').html("<%= j(render partial: 'browse_list') %>");
<% if @emit_filters %>
$('#sort_filter_panel').html("<%= j(render partial: 'browse_filters') %>");
$('#authorsDlg').html("<%= j(render partial: 'authors_select', locals: {authors: @authors, list: @authors_list}) %>");
$('#mobileFilterDlg').html("<%= j(render partial: 'mobile_filters', locals: {authors: @authors, list: @authors_list}) %>");
if("#{@sort_or_filter}" == 'sort') {
  $('.mobile-sort-area').show();
  $('.author-mobile-filters-area').hide();
  $('#opt_sort').addClass('active');
} else {
  $('.mobile-sort-area').hide();
  $('.author-mobile-filters-area').show();
  $('#opt_filter').addClass('active');
}

<% if @filters.length == 0 %>
if(window.innerWidth < mobileWidth) {
  $('#mobileFilterDlg').modal('show');
}
<% end %>
<% end %>
stopModal('spinnerdiv');