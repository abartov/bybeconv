<% if @error %>
  $('.errorDlgTitle').html('<%= t(:please_note) %>');
  $('.errorDlgText').html('<%= @anthology.errors[:base][0] %>');
  $('#new_anth').hide();
  $('#anth_panel').show();
  $('#anthErrorDlg').modal('show');
  $('#anthologies').val($.cur_anth.toString());
<% else %>
  $('#anth_container').replaceWith("<%= j(render partial: 'shared/anth_panel', locals: {show_panel: true}) %>");
  $('input[name=anthology\\[title\\]]').val("<%= @new_anth_name %>");
<% end %>