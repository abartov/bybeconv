<% if @error %>
  $('.errorDlgTitle').html('<%= t(:error) %>');
  $('.errorDlgText').html('<%= @anthology.errors[:base][0] %>');
  $('#rename_dlg').hide();
  $('#anth_panel').show();
  $('#anthErrorDlg').modal('show');
<% else %>
  $('#anth_container').replaceWith("<%= j(render partial: 'shared/anth_panel', locals: {show_panel: true}) %>");
  $('.badge-number').text("<%= @anthology.texts.length.to_s %>");
<% end %>