.modal-dialog
  .modal-content
    .container-fluid
      .modal-header
        .popup-top
        .row{:style => "padding:15px;margin: 0"}
          .col-4{:style => "padding: 0;"}
            %button.btn-small-outline-v02{'data-dismiss'=>'modal'}
              .btn-text-v02
                %span.right-arrow 2
                %span= t(:back)
          .col-4{:style => "padding: 0;"}
            .modal-title.headline-2-v02{:style => "text-align: center;margin: 0; padding-top: 3px;"}= t(:recommendation)
          .col-4
      .modal-body
        .by-popup-v02{style: 'max-height:calc(100vh - 260px);'}
          %div
            .by-card-content-v02{:style => "padding-top: 0"}
              .by-card-header-v02.desktop-only
                %span.headline-1-v02= t(:recommendation)
              %a.popup-x-v02.linkcolor.pointer{'data-dismiss'=>'modal'} -
          .by-card-content-v02
            .new-info-v02.pointer.notyet 4
            .recommend-card-left-v02
              %p!= sanitize(@r.body).gsub("\n",'<br>')
