%h1= "recommendation for #{@p.about}"
%p= "from: #{@p.from}"
%p
  = 'content:'
  %br
  != @p.what.sub("\n","<br/>")
%p= "submitted at: #{@p.created_at.to_s}"
%hr
%p
  = link_to t(:resolve_as_accepted), recommendation_resolve_path(@p, :accept => 'yes')
%p
  = link_to t(:resolve_as_rejected), recommendation_resolve_path(@p, :accept => 'no')

