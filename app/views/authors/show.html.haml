%h1= @author.name
/ partials?
%b{ style: 'font-size: 2rem'}
  = link_to t(:edit), authors_edit_path(id: @author.id)
%p
%table
  %tr
    %td
      %h2= t(:basic_details)
    %td
      %h2= t(:identifiers)
  %tr
    %td
      / basic info
      %b= t(:life_years)
      = @author.dates
      %br
      %b= t(:copyright_status)
      = @author.public_domain ? t(:public_domain) : t(:by_permission)
      %br
      %b= t(:toc_status)
      = t(@author.toc.status)
      %br
      %b= t(:comments)
      = @author.comment
    %td
      / ===== Identifiers =====
      %b= t(:nli_id)
      = @author.nli_id
      %br
      %b= t(:viaf_id)
      != "&rlm;"
      = @author.viaf_id
%h2= t(:content)
%b= t(:works)
= link_to "#{@count[:works]} #{t(:works)}", author_toc_path(id: @author.id)
%br
%b= t(:translations_by)
= t(:TBD)
%br
%b= t(:works_about)
= t(:TBD)



