.card{style:'margin-top:3rem;'}
  .card-content
    %h1= t(:works_about_this_author, {gender_suffix: @author.gender == 'female' ? '/×ª' : ''})
    %ol
      - @author.aboutnesses.each do |ab|
        %li
          = link_to ab.work.title, work_show_path(id: ab.work_id)
          = ' / '
          - austr = ''
          - ab.work.authors.each do |au|
            - austr += link_to(au.name, author_toc_path(id: au.id))+'; '
          != austr[0..-3]
