= form_for person, url: {action: action, id: person.id} do |f|
  - if person.errors.any?
    #error_explanation
      %h2= "#{pluralize(person.errors.count, "error")} prohibited this person from being saved:"
      %ul
        - person.errors.full_messages.each do |msg|
          %li= msg

  .backend-field
    = f.label t(:name)
    = f.text_backend-field :name
  .backend-field
    = f.label t(:birthdate)
    = f.text_backend-field :birthdate
  .backend-field
    = f.label t(:deathdate)
    = f.text_backend-field :deathdate
  .backend-field
    = f.label t(:copyright_status)
    %br
    = f.radio_button(:public_domain, true, checked: person.public_domain && (not person.public_domain.nil?))
    = f.label t(:public_domain)
    = f.radio_button(:public_domain, false, checked: (not person.public_domain) && (not person.public_domain.nil?))
    = f.label t(:by_permission)
  .backend-field
    = f.label t(:other_designation)
    = f.text_backend-field :other_designation
  .backend-field
    = f.label t(:affiliation)
    = f.text_backend-field :affiliation
  .backend-field
    = f.label t(:country)
    = f.text_backend-field :country
  .backend-field
    = f.label t(:comment)
    = f.text_area :comment
  .backend-field
    = f.label t(:viaf_id)
    = f.text_backend-field :viaf_id
  .backend-field
    = f.label t(:nli_id)
    = f.text_backend-field :nli_id
  .backend-field
    = f.label t(:wikidata_id)
    = f.text_backend-field :wikidata_id, size: 10
  .backend-field
    = t(:wikipedia_url)
    = f.text_area :wikipedia_url, rows: 3, cols: 50
  %br
  .backend-field
    = t(:wikipedia_snippet)
    = f.text_area :wikipedia_snippet, rows: 8, cols: 50
  .backend-field
    = f.label t(:current_image)
    = image_tag person.profile_image.url(:thumb)
  .backend-field
    = f.label t(:upload_new_image)
    = f.file_backend-field :profile_image
  .backend-field
    = f.label t(:metadata_approved)
    = t(:yes)
    = f.radio_button(:metadata_approved, true, checked: person.metadata_approved)
    = t(:no)
    = f.radio_button(:metadata_approved, false, checked: (not person.metadata_approved))
  .actions
    = f.submit t(:save)
