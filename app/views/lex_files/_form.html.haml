= form_for @lex_file do |f|
  - if @lex_file.errors.any?
    #error_explanation
      %h2= "#{pluralize(@lex_file.errors.count, "error")} prohibited this lex_file from being saved:"
      %ul
        - @lex_file.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :fname
    = f.text_field :fname
  .field
    = f.label :status
    = f.number_field :status
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :entrytype
    = f.number_field :entrytype
  .field
    = f.label :comments
    = f.text_area :comments
  .actions
    = f.submit 'Save'
