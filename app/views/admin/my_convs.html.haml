%table
  %tr
    %th= t(:title)
    %th= t(:author)
    %th= t(:conversion_verified)
    %th= t(:actions)
  - sorted_items = @items.map{|li| li.item}.sort_by{ |i| i.updated_at}
  - sorted_items.each do |m|
    %tr
      %td= m.title
      %td= m.author_string
      %td= m.conversion_verified ? t(:yes) : t(:no)
      %td
        = link_to t(:render), url_for(controller: :manifestation, action: :read, id: m.id)
        = ' | '
        = link_to t(:edit_markdown), manifestation_edit_path(m.id)