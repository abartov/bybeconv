.card{style:'width:70%;alignment:center;'}
  .card-content
    = form_for fc, url: {action: action, id: fc.id} do |f|
      .backend-field
        = f.label t(:title)
        = f.text_field :title
      .backend-field
        = f.label t(:featured_content_body)
        = f.text_area :body, rows: 10, cols: 100
      .backend-field
        = f.label t(:external_link)
        = f.text_field :external_link
      .backend-field
        = f.label t(:linked_manifestation)
        = autocomplete_field_tag :linked_manifestation_f, fc.manifestation.nil? ? '' : fc.manifestation.title_and_authors, autocomplete_manifestation_title_path, id_element: '#linked_manifestation', 'data-noMatchesLabel' => t(:no_matches_found)
        = hidden_field_tag :linked_manifestation, fc.manifestation.nil? ? nil : fc.manifestation.id
      .backend-field
        = f.label t(:linked_author)
        = autocomplete_field_tag :linked_author_f,
                                 fc.authority.nil? ? '' : fc.authority.name,
                                 autocomplete_authority_name_path,
                                 id_element: '#linked_author',
                                 data: { noMatchesLabel: t(:no_matches_found) }
        = hidden_field_tag :linked_author, fc.authority.nil? ? nil : fc.authority.id
      .actions
        = f.submit t(:save)
