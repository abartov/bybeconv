- the_url = local_assigns.has_key?(:url) ? url : request.original_url
.modal-dialog
  .modal-content{style:'width:auto'}
    .modal-header
      .popup-top
        .row{:style => "padding:15px;margin: 0"}
          .col-4{:style => "padding: 0;"}
            %button.btn-small-outline-v02{'data-dismiss'=>'modal'}
              .btn-text-v02
                %span.right-arrow 2
                %span= t(:back)
          .col-4{:style => "padding: 0;"}
            .modal-title.headline-2-v02{:style => "text-align: center;margin: 0; padding-top: 3px;"}= t(:choose_sharing_medium)
          .col-4
    .modal-body
      .by-popup-v02-share
        .by-card-header-v02.desktop-only
          %p.headline-1-v02= t(:choose_sharing_medium)
          %a.popup-x-v02.linkcolor.pointer{'data-dismiss'=>'modal'} -
        .by-card-content-v02
          .share-options-area
            .share-options-group
              %a.share-icon.by-icon-v02.icon-byfacebook{href: "https://www.facebook.com/sharer/sharer.php?u=#{the_url}", target: '_blank'}
                .share-name= t(:facebook)
              %a.share-icon.by-icon-v02.icon-bytwitter{href: "https://twitter.com/home?status=#{the_url}", target: '_blank'}
                .share-name= t(:twitter)
              %a.share-icon.by-icon-v02.icon-bywhatsapp{href: "https://api.whatsapp.com/send?text=#{uri_escape(the_url)}", target: '_blank'}
                .share-name= t(:whatsapp)
              %a.share-icon.by-icon-v02.icon-byenvelope{href: "mailto:?to=&subject=#{t(:from_project_ben_yehuda)}&body=#{the_url}", target: '_blank'}
                .share-name= t(:email)
