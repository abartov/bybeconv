.modal-dialog
  .modal-content{style:'width:auto'}
    .modal-header
      .popup-top
        .row{:style => "padding:15px;margin: 0"}
          .col-4{:style => "padding: 0;"}
            %button.btn-small-outline-v02{'data-dismiss'=>'modal'}
              .btn-text-v02
                %span.right-arrow 2
                %span= t(:back)
          .col-4{:style => "padding: 0;"}
            .modal-title.headline-2-v02.errorDlgTitle{:style => "text-align: center;margin: 0; padding-top: 3px;"}= t(:error)
          .col-4
    .modal-body
      .by-popup-v02
        %div
          .by-card-content-v02{:style => "padding-top: 0"}
            .by-card-header-v02.desktop-only
              %span.headline-1-v02.errorDlgTitle= t(:error)
            %a.popup-x-v02.linkcolor.pointer{'data-dismiss'=>'modal'} -
        .by-card-content-v02
          %p.errorDlgText= t(:error)
          .bottom-button-area
            %button.btn-small-outline-v02.close-btn{'data-dismiss'=>'modal'}
              .btn-text-v02= t(:close)
          %input#tocopy{style:'height:0;width:0;'}
