#breadcrumbs
  .breadcrumbs-text= link_to t(:homepage), '/'
  .breadcrumbs-arrow= 1
  - if @pagetype == :manifestation
    .breadcrumbs-text= link_to t(:authors), authors_path
    .breadcrumbs-arrow= 1
    - e = @entity.expression
    - w = e.work
    - if e.translators.count > 0
      - authority = e.translators[0]
    - else
      - authority = w.involved_authorities[0].authority
    .breadcrumbs-text
      - unless authority.nil?
        = link_to authority.name, default_link_by_class(authority.class, authority.id)
      - else
        = '?'
    .breadcrumbs-arrow= 1
    - genre = textify_genre(w.genre)
    - unless authority.nil?
      .breadcrumbs-text
        = link_to e.translation ? "#{t(:translation)} #{genre}" : genre, :controller => :authors, :action => authority.class.to_s == 'Person' ? :toc : :corp_toc, :id => authority.id, :genre => w.genre
      -#.breadcrumbs-arrow= 1
      -#.breadcrumbs-text
      -#  %b= @entity.title
  - elsif @pagetype == :author
    .breadcrumbs-text= link_to t(:authors), authors_path
    -#.breadcrumbs-arrow= 1
    -#.breadcrumbs-text
    -#  %b= @entity.name
  - elsif @pagetype == :period
    .breadcrumbs-text
      %b= t(:periods)
    -#.breadcrumbs-arrow= 1
    -#.breadcrumbs-text
    -#  %b= @entity.name
