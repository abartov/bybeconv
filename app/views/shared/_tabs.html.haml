.container-fluid#navbar-full-width
  .row
    .col-sm-4#nav-additional
      .row
        .col-sm-4
          .english
            %p
              %a{href: 'http://benyehuda.org/e_faq.html'}= 'English'
        .col-sm-8
          .fontsize-selector
            %p{style: 'float:right'}
              = render partial: 'shared/fontsize'
    .col-sm-8.nav
      %ul
        %li{role: 'presentation', :class => tabclass['authors']}
          = link_to t(:authors), :controller => :authors
        %li{role: 'presentation', :class => tabclass['works']}
          = link_to t(:works), :controller => :manifestation
        /%li{role: 'presentation', :class => tabclass['periods']} TODO: implement period pages
        / = link_to t(:periods), :controller => :periods
        %li{role: 'presentation', :class => tabclass['h_faq']}
          = link_to t(:about), 'http://benyehuda.org/h_faq.html'
        %li{role: 'presentation', :class => tabclass['help']}
          = link_to t(:how_to_help), 'http://benyehuda.org/blog/%D7%A8%D7%95%D7%A6%D7%99%D7%9D-%D7%9C%D7%A2%D7%96%D7%95%D7%A8'
        %li{role: 'presentation', :class => tabclass['donate']}
          = link_to t(:donate_money), 'http://benyehuda.org/blog/%D7%AA%D7%9E%D7%99%D7%9B%D7%94-%D7%9B%D7%A1%D7%A4%D7%99%D7%AA-%D7%91%D7%A4%D7%A8%D7%95%D7%99%D7%A7%D7%98-%D7%91%D7%9F-%D7%99%D7%94%D7%95%D7%93%D7%94'
        %li{role: 'presentation', :class => tabclass['contact']}
          = link_to t(:contact_us), 'mailto:editor@benyehuda.org'
