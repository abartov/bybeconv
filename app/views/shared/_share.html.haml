- if local_assigns.has_key?(:element) && local_assigns[:element] == :button
  %button.toolbox-cell.darkoldpink.share
    %i.fa.fa-share-alt
    %span.tooltiptext= t(:share)
- elsif local_assigns.has_key?(:element) && local_assigns[:element] == :header_button
  .icon-in-group-v02.share
    %span.by-icon-v02{style:'color: #660248'} U
- elsif local_assigns.has_key?(:element) && local_assigns[:element] == :mobile_button
  %a.dropdown-item.linkcolor{style: 'color: #660248;'}
    .share{style:'cursor:pointer'}
      %span.by-icon-v02.iconNearText-v02 U
      = t(:share)
- elsif local_assigns.has_key?(:element) && local_assigns[:element] == :link
  .pointer.share{style:'display:inline'}
    %i.fa.fa-share-alt.fa08
    = t(:share)
- elsif local_assigns.has_key?(:element) && local_assigns[:element] == :footer
  .pointer.by-footer-nav-item-v02.share{style:'display:inline;color:white'}
    %span.by-icon-v02.footer-nav-icon-v02 U
    = t(:share)

#shareDlg{title: t(:choose_sharing_medium)}
  .container-fluid
    = render partial: 'shared/share_controls'
:javascript
  $(document).ready(function() {
    // share button
    $('#shareDlg').dialog({
      autoOpen: false,
      height: 'auto',
      width: 300,
      modal: true,
      buttons: { "#{t(:cancel)}": function() { $('#shareDlg').dialog("close");} }
      });
    $('.share').click(function() {
      $('#shareDlg').dialog('open');
    });
  });
